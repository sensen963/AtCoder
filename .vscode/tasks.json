{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for Clang on AtCoder",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++14",
                "-stdlib=libc++",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.out",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}